<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @artist.name %>
</p>

<p>
  <strong>User:</strong>
  <%= @artist.user.email %>
</p>

<%= link_to 'Edit', edit_artist_path(@artist) %> |
<%= link_to 'Back', artists_path %>

<h1><%= @artist.name %> Discography</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Artist</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artist.albums.each do |album| %>
      <tr>
        <td><%= album.name %></td>
        <td><%= album.artist.name %></td>
        <td><%= album.user.email %></td>
        <td><%= link_to 'Show', [@artist,album] %></td>
        <td><%= link_to 'Edit', edit_artist_album_path(@artist,album) %></td>
        <td><%= link_to 'Destroy', [@artist,album], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= album_favorite_unfavorite_link album %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Album', new_artist_album_path(@artist) %>
