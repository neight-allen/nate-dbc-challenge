<p id="notice"><%= notice %></p>

<h1>Track list for <%= @album.name %></h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Album</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.name %></td>
        <td><%= link_to 'Show', [@album,@song] %></td>
        <td><%= link_to 'Edit', edit_album_song_path(@album,song) %></td>
        <td><%= link_to 'Destroy', [@album,@song], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Song', new_album_song_path %>
